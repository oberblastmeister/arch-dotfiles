#!/bin/bash

packages=(
    xorg
    bspwm
    sxhkdrc
    xsettingsd

    pulseaudio
    dunst
    gnome-keyring
    networkmanager

    # lightdm
    lightdm
    lightdm-webkit2-greeter
    lightdm-webkit-theme-litarvan
    
    # unified interface for xdg-open and xdg-mime, executable mimeopen
    perl-file-mimeinfo

    # themes
    noto-fonts
    ttf-roboto
    papirus-icon-theme
    adpata-gtk-theme
    mcmojave-cursors

    # pacman
    pkgstats # send pacakge info to arch linux
    pacman-contrib

    # utilities
    trash-cli
    neofetch

    alsa-utils # includes alsamixer

    # better stuff
    fd # find, needed for fzf
    bat # cat, needed for fzf
    exa # ls
    ripgrep # better grep, needed for fzf

    cronie # cron jobs

    neovim

    # clipboard stuff
    xclip # clipboard integration for neovim
    xsel # needed for cht.sh

    # dual keyboard mappings
    xcape
    rlwrap

    python-pip

    zsh
    tmux
    kitty

    udiskie

    ufw # firewall stuff
    gufw

    # viewers
    feh # background setter
    sxiv # image
    zathura # pdf
    zathura-pdf-mupdf
    mpv # video
    jq # view json, important for bspwm

    # important for multimonitor
    autorandr

    # gui stuff
    lxappearance
    pavucontrol
    arandr
    thunar
    xfce4-power-manager)

for package in ${packages[@]}; do
    sudo pacman -S --noconfirm $package
    # echo $package
done

aur_packages=(
    polybar
    nerd-fonts-fira-code
    # zsh prompt
    starship-bin
    # process manager
    ytop
    bottom
)

for package in ${aur_packages[@]}; do
    yay -S $package
done

# it breaks braile fonts, must be removed
# https://www.reddit.com/r/archlinux/comments/gf2vgb/the_braille_fonts_dont_show_properly_anywhere/
sudo pacman -R gnu-free-fonts
