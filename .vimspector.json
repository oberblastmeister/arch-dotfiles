{
    "configurations": {
      "Python": {
        "adapter": "debugpy",
        "configuration": {
          "name": "Launch",
          "type": "python",
          "request": "launch",
          "cwd": "${cwd}",
          "python": "python",
          "stopOnEntry": true,
          "console": "externalTerminal",
          "debugOptions": [],
          "program": "${file}"
      }
    },
      "C family": {
        "adapter": "vscode-cpptools",
        "configuration": {
          "name": "Launch",
          "type": "cppdbg",
          "request": "launch",
          "program": "<path to binary>",
          "cwd": "${cwd}",
          "externalConsole": true,
          "MIMode": "lldb"
      }
    }
  }
}
