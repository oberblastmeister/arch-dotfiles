#!/bin/bash

CUSTOM="gsettings set org.gnome.settings-daemon.plugins.media-keys.custom-keybinding:/org/gnome/settings-daemon/plugins/media-keys/custom-keybindings"

KEY_PATH="/org/gnome/settings-daemon/plugins/media-keys/custom-keybindings"

# first add keybindings then set keybinding properties
gsettings set org.gnome.settings-daemon.plugins.media-keys custom-keybindings \
    "['$KEY_PATH/custom0/', '$KEY_PATH/custom1/', '$KEY_PATH/custom2/', '$KEY_PATH/custom3/']"

# Take a screenshot of the entire display
$CUSTOM/custom0/ name "Launch Kitty"
$CUSTOM/custom0/ command "kitty"
$CUSTOM/custom0/ binding '<Super>semicolon'

# delete default keybinding
gsettings set org.gnome.settings-daemon.plugins.media-keys screenshot ['']
# # screenshot the current active window
$CUSTOM/custom1/ name "Start Flameshot"
$CUSTOM/custom1/ command "flameshot gui"
$CUSTOM/custom1/ binding "Print"

# delete default keybinding that is also <Super>space
gsettings set org.gnome.desktop.wm.keybindings switch-input-source ['']
$CUSTOM/custom2/ name "Start ulauncher"
$CUSTOM/custom2/ command "ulauncher"
$CUSTOM/custom2/ binding "<Super>space"

# delete default email keybinding
gsettings set org.gnome.settings-daemon.plugins.media-keys email ['']
$CUSTOM/custom3/ name "Start rambox"
$CUSTOM/custom3/ command "rambox"
$CUSTOM/custom3/ binding "<Super>e"


# $CUSTOM/custom2/ name "Toggle Albert"
# $CUSTOM/custom2/ command "albert toggle"
# $CUSTOM/custom2/ binding "<Super>space"

