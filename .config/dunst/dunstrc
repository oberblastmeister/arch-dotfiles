[global]
    # font = "FiraCode Nerd Font 11"
    font = "monospace 9"
    markup = full
    format = "%a:\n<b>%s</b>\n%b"

    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "350x5-30+60"
    separator_height = 4.5
    padding = 33
    horizontal_padding = 33
    separator_color = frame

    # icons
    icon_position = off
    icon_path = "/usr/share/icons/Papirus/22x22/status/:/usr/share/icons/Papirus/22x22/devices:/usr/share/icons/Papirus/22x22/apps/:/usr/share/icons/Papirus/22x22/actions"
    max_icon_size = 32

    # Define the title of the windows spawned by dunst
    title = Dunst

    # Define the class of the windows spawned by dunst
    class = Dunst
    startup_notification = false
    corner_radius = 0

    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all


[frame]
    width = 4.5
    color = "#504945"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 5

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 20

[urgency_critical]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 0
