# vim: filetype=neomuttrc

# prioritize html and convert it to text because most plain text email is bad
alternative_order text/html text/plain text/enriched

source /usr/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated
source /home/brian/.config/mutt/accounts/1-personal.muttrc # mw-autogenerated
macro index,pager i1 '<sync-mailbox><enter-command>source /home/brian/.config/mutt/accounts/1-personal.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to littlebubu.shu@gmail.com" # mw-autogenerated
macro index,pager i2 '<sync-mailbox><enter-command>source /home/brian/.config/mutt/accounts/2-school.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to bshu23@belmontschools.net" # mw-autogenerated

macro index,pager \cb "<pipe-message> urlscan<Enter>" "call urlscan to extract URLs out of a message"

macro attach,compose \cb "<pipe-entry> urlscan<Enter>" "call urlscan to extract URLs out of a message"

# because ctrl j and k don't work in tmux for some reason
bind index,pager \Cp sidebar-prev
bind index,pager \Cn sidebar-next

# personal mailcap
# set mailcap_path = ~/.config/mutt/mailcap

# change sidebar visibility
set sidebar_visible = no
