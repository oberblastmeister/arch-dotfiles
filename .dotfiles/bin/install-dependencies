#!/bin/bash

packages=(
    xorg-server # graphical server
    xorg-xinit # allows to manually start the xserver

    # bspwm
    bspwm
    sxhkdrc

    xsettingsd
    git
    github-cli
    unclutter
    libnotify

    # audio
    pulseaudio
    pulseaudio-alsa
    pulseaudio-bluetooth
    pulsemixer
    pamixer
    alsa-utils # includes alsamixer

    # bluetooth
    bluez
    bluez-utils
    blueman

    dunst
    gnome-keyring
    acpid

    # network
    networkmanager
    nm-connection-editor
    network-manager-applet

    # lightdm
    lightdm
    lightdm-webkit2-greeter
    lightdm-webkit-theme-litarvan
    
    # themes
    papirus-icon-theme
    adpata-gtk-theme

    # fonts
    noto-fonts
    ttf-roboto

    # pacman
    pkgstats # send pacakge info to arch linux

    # utilities
    trash-cli
    neofetch

    # better stuff
    fzf
    fd # find, needed for fzf
    bat # cat, needed for fzf
    exa # ls
    ripgrep # better grep, needed for fzf
    broot

    cronie # cron jobs

    neovim

    # clipboard stuff
    xclip # clipboard integration for neovim
    xsel # needed for cht.sh

    # dual keyboard mappings
    xcape
    rlwrap

    python-pip
    luarocks

    zsh
    tmux
    kitty

    udiskie

    ufw # firewall stuff
    gufw

    # viewers
    feh # background setter
    sxiv # image
    zathura # pdf
    zathura-pdf-mupdf
    mpv # video
    jq # view json, important for bspwm

    # important for multimonitor
    autorandr

    # gui stuff
    lxappearance
    pavucontrol
    arandr
    thunar
    flameshot
    peek
    gnome-sound-recorder
    xfce4-power-manager)

for package in ${packages[@]}; do
    sudo pacman -S --noconfirm $package
    # echo $package
done

aur_packages=(
    polybar
    nerd-fonts-fira-code
    # zsh prompt
    starship-bin
    # process manager
    bottom
    xob
    dragon-drag-and-drop
    zoxide
    brave-bin
    mcmojave-cursors
    googler
    buku
    buku_run
)

language_servers=(
    lua-language-server-git
    microsoft-python-language-server
    typescript-language-server-bin
    vscode-json-languageserver-bin
    yaml-language-server-bin
    gopls

    # non aur
    texlab
    rust-analyzer
    bash-language-server
)

for package in ${aur_packages[@]}; do
    yay -S $package
done

# it breaks braile fonts, must be removed
# https://www.reddit.com/r/archlinux/comments/gf2vgb/the_braille_fonts_dont_show_properly_anywhere/
sudo pacman -R gnu-free-fonts
